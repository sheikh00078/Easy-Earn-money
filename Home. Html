    function claimReward() {
      const now = Date.now();
      const lastClaim = user.lastClaim || 0;

      if (now - lastClaim >= 86400000) {
        user.balance += 10;
        user.lastClaim = now;
        localStorage.setItem("currentUser", JSON.stringify(user));
        document.getElementById("balanceAmount").innerText = user.balance;
        alert("üéâ ‡ßß‡ß¶ ‡¶ü‡¶æ‡¶ï‡¶æ ‡¶™‡ßÅ‡¶∞‡¶∏‡ßç‡¶ï‡¶æ‡¶∞ ‡¶Ø‡ßÅ‡¶ï‡ßç‡¶§ ‡¶π‡ßü‡ßá‡¶õ‡ßá!");
      } else {
        const hoursLeft = Math.ceil((86400000 - (now - lastClaim)) / 3600000);
        alert("‚è≥ ‡¶Ü‡¶¨‡¶æ‡¶∞ ‡¶™‡ßÅ‡¶∞‡¶∏‡ßç‡¶ï‡¶æ‡¶∞ ‡¶®‡¶ø‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡¶¨‡ßá‡¶® " + hoursLeft + " ‡¶ò‡¶£‡ßç‡¶ü‡¶æ ‡¶™‡¶∞‡ßá‡•§");
      }
