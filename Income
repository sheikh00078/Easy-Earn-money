  <script>
    let user = JSON.parse(localStorage.getItem("currentUser")) || {
      balance: 0,
      vip: null,
      vipStart: null
    };

    const vipInfo = {
      1: { cost: 500, hourly: 4.17, name: "VIP-1" },
      2: { cost: 1000, hourly: 8.50, name: "VIP-2" }
    };

    function buyVIP(id) {
      if (user.vip) {
        alert("‚ùå ‡¶Ü‡¶™‡¶®‡¶ø ‡¶á‡¶§‡¶ø‡¶Æ‡¶ß‡ßç‡¶Ø‡ßá ‡¶è‡¶ï‡¶ü‡¶ø VIP ‡¶ö‡¶æ‡¶≤‡ßÅ ‡¶ï‡¶∞‡ßá‡¶õ‡ßá‡¶®‡•§");
        return;
      }

      const vip = vipInfo[id];

      if (user.balance < vip.cost) {
        alert("‚ö†Ô∏è ‡¶™‡¶∞‡ßç‡¶Ø‡¶æ‡¶™‡ßç‡¶§ ‡¶¨‡ßç‡¶Ø‡¶æ‡¶≤‡ßá‡¶®‡ßç‡¶∏ ‡¶®‡ßá‡¶á‡•§ VIP ‡¶ï‡¶ø‡¶®‡¶§‡ßá ‡¶¨‡ßç‡¶Ø‡¶æ‡¶≤‡ßá‡¶®‡ßç‡¶∏ ‡¶∞‡¶ø‡¶ö‡¶æ‡¶∞‡ßç‡¶ú ‡¶ï‡¶∞‡ßÅ‡¶®‡•§");
        return;
      }

      user.balance -= vip.cost;
      user.vip = id;
      user.vipStart = Date.now();
      localStorage.setItem("currentUser", JSON.stringify(user));
      alert(`üéâ ${vip.name} ‡¶∏‡¶ï‡ßç‡¶∞‡¶ø‡ßü ‡¶π‡ßü‡ßá‡¶õ‡ßá! ‡¶™‡ßç‡¶∞‡¶§‡¶ø ‡¶ò‡¶£‡ßç‡¶ü‡¶æ‡ßü ‡¶Ü‡ßü ‡¶π‡¶¨‡ßá ‡ß≥${vip.hourly}`);
      showVIPStatus();
    }

    function showVIPStatus() {
      const vip = vipInfo[user.vip];
      const statusDiv = document.getElementById("vipStatus");
      if (!vip) {
        statusDiv.innerHTML = "<p>üö´ ‡¶ï‡ßã‡¶® VIP ‡¶∏‡¶ï‡ßç‡¶∞‡¶ø‡ßü ‡¶®‡ßá‡¶á‡•§</p>";
        return;
      }

      statusDiv.innerHTML = `
        <div class="vip-status">
          <p>‚úÖ ‡¶∏‡¶ï‡ßç‡¶∞‡¶ø‡ßü: ${vip.name}</p>
          <p>‡¶ò‡¶£‡ßç‡¶ü‡¶æ‡ßü ‡¶Ü‡ßü: ‡ß≥${vip.hourly}</p>
          <button onclick="collectIncome()">üí∏ ‡¶Ü‡ßü ‡¶∏‡¶Ç‡¶ó‡ßç‡¶∞‡¶π ‡¶ï‡¶∞‡ßÅ‡¶®</button>
        </div>
      `;
    }

    function collectIncome() {
      const now = Date.now();
      const last = user.lastCollect || user.vipStart;
      const hours = Math.floor((now - last) / (1000 * 60 * 60));

      if (hours <= 0) {
        alert("‚è≥ ‡¶Ü‡ßü ‡¶∏‡¶Ç‡¶ó‡ßç‡¶∞‡¶π ‡¶ï‡¶∞‡¶§‡ßá ‡¶Ü‡¶∞‡¶ì ‡¶∏‡¶Æ‡ßü ‡¶Ö‡¶™‡ßá‡¶ï‡ßç‡¶∑‡¶æ ‡¶ï‡¶∞‡ßÅ‡¶®‡•§");
        return;
      }

      const hourly = vipInfo[user.vip].hourly;
      const totalEarned = hours * hourly;
      user.balance += totalEarned;
      user.lastCollect = now;
      localStorage.setItem("currentUser", JSON.stringify(user));
      alert(`‚úÖ ‡¶Ü‡ßü ‡¶Ø‡ßÅ‡¶ï‡ßç‡¶§ ‡¶π‡ßü‡ßá‡¶õ‡ßá: ‡ß≥${totalEarned.toFixed(2)} (${hours} ‡¶ò‡¶®‡ßç‡¶ü‡¶æ)`);

      showVIPStatus();
    }

    showVIPStatus();
